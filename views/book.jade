extends layout
block content
  div#content.col-xs-12.col-sm-12.col-md-12.col-lg-12
    include book_item
    div#id
      div.col-xs-12.col-sm-3.col-md-3#bookImg
        img(src='')
      div.col-xs-12.col-sm-5.col-md-5.col-lg-5
        div.bookInfo
          div#title.titleBook
        //- div
        //-   span.properties
        //-     b Автор:
        //-   span#author
        .bookLastInfo
          div.bookRow
            span.properties автор:
            span#author.black
          div.bookRow
            span.properties год:
            span#year.black
          div.bookRow
            span.properties страниц:
            span#pages.black
          div.bookRow
            span.properties isbn:
            span#isbn.black
        div.btnBlock.col-md-12
          br    
          button.btnBookID.btn-lg.btn.btn-success(type='button') Хочу читать!
      div.bookDescription.col-xs-4.col-sm-4.col-md-4
        h4 О книге
        hr
        p#description

    script(src='/js/book.js' defer)
