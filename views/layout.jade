doctype html
html(lang='ru')
    head
        title= title
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta( name='description', content='library Sh++')
        link(rel='stylesheet',href='/css/libs.min.css')
        link(rel='stylesheet', href='/css/style.css')
        script(src='/js/libs.min.js' defer)
        script(src='/js/common.js' defer)
        
    body
        include header
        section#main
            div.container
                div.row
                    include sidebar
                    div#content.col-xs-10.col-sm-10.col-md-10.col-lg-10
                        block content
        div.contacts
          div.contacts-info
            div.contact-row.contact-address
              div.contact-icon
                i.fa.fa-map-marker.fa-4x(aria-hidden='true')
              div.contact-text Vasilevskiy pereulok 10
                br
                |  Kirovohrad, Ukraine
            div.contact-row.contact-phone
              div.contact-icon
                i.fa.fa-mobile.fa-4x(aria-hidden='true')
              div.contact-text 099 999 99 99
                br
                |  099 999 99 99
            div.contact-row.contact-mail
              div.contact-icon
                i.fa.fa-commenting-o.fa-4x(aria-hidden='true')
              div.contact-text Contact us
                br
                a(href) info@programming.kr.ua
        include footer
