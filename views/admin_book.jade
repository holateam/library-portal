extends admin_layout

block content
  div.row
    table.table.table-hover(style='display:none')
      thead
        tr
          th Book Title
          th Author
          th Reader's name
          th Reader's email
          th Phone number
          th Return date
          th Amount of guarantee
      tbody
        tr#pattern.book_list_row
      div#bookID
        div.col-md-3#bookImg
            img(src='')
            div.blokBtnAdmin
              button#btnEditBook.btn.btn-default(type='button') Edit book
              button#btnRemoveBook.btn.btn-default(type='button') Remove Book
        div.col-md-5.bookInfo
            h4#titleBook
            div
                span.properties author:
                span#author 
            div
                span.properties year:
                span#year
            div
                span.properties pages:
                span#pages
            div
                span.properties ISBN:
                span#isbn
        div.orderBlock.col-md-4
            div.actionBook
              h3 The condition of the book
              br
              p Here are the information about the condition of the book
            div.response
              h3 Congratulations
              br
              p Instructions on how to get the book sent to your email:
              
            .input-group.form-queue
              .input-group-addon
                i.fa.fa-user.fa-1x(aria-hidden="true")
              input.nameOfDebtor.form-control(type='text', placeholder='name' name='name')
            .input-group.form-queue
              .input-group-addon
                i.fa.fa-mobile.fa-1x(aria-hidden="true")
              input.phoneOfDebtor.form-control(type='text', placeholder='phone' name='phone')
            .input-group.form-queue
              .input-group-addon
                i.fa.fa-at.fa-1x(aria-hidden="true")
              input.emailOfDebtor.form-control(type='text', placeholder='email' name='email')
              //- span.glyphicon.glyphicon-ok.form-control-feedback(aria-hidden='true')
              //- span.glyphicon.glyphicon-remove.form-control-feedback(aria-hidden='true')
            .input-group.form-queue.termD-group
              .input-group-addon
                i.fa.fa-clock-o.fa-1x(aria-hidden="true")
              input.termOfDebtor.form-control(type='text', placeholder='term' name='term')
            .input-group.form-queue.depositD-group
              .input-group-addon
                i.fa.fa-money.fa-1x(aria-hidden="true")
              input.pawnOfDebtor.form-control(type='text', placeholder='deposit $' name='pawn')
            .input-group.form-queue.dateD-group
              .input-group-addon
                i.fa.fa-calendar-check-o.fa-1x(aria-hidden="true")
              input.dateOfDebtor.form-control(type='text', placeholder='Date of the taking of the book' name='date' disabled)
            .input-group.form-queue
            div.updateBookAction
              span renewal of book
              input#renewalOfBook(type='checkbox', value='option1')


            br
            button.btnBookAction.btn.btn-success(type='button')
            
        div.bookDescription
            div.col-md-12
                h4 О книге
                hr
                
                p#bookDescriptionText
                a.popup-modal(href='#test-modal') Open modal
                //- #test-modal.mfp-hide.white-popup-block
                //-   h1 Modal dialog
                //-   p
                //-     | You won't be able to dismiss this by usual means (escape or
                //-     | click button), but you can close it programatically based on
                //-     | user choices or actions.
                //-   p
                //-     a.popup-modal-dismiss(href='#') Dismiss
  script(src='/js/admin_book.js' defer)
