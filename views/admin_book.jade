extends admin_layout

block content
  div.row
    table.table.table-hover(style='display:none')
      thead
        tr
          th Название
          th Автор
          th Читатель
          th Email
          th Телефон
          th Дата возврата
          th Залог
      tbody
        tr#pattern.book_list_row
      div#id
        div.col-md-3#bookImg
            img(src='')
            div.blokBtnAdmin
              button#btnEditBook.btn.btn-default(type='button') Изменить
              button#btnRemoveBook.btn.btn-default(type='button') Удалить
        div.col-md-5.bookInfo
            h4#title.titleBook
            div
                span.properties автор:
                span#author
            div
                span.properties год:
                span#year
            div
                span.properties страниц:
                span#pages
            div
                span.properties ISBN:
                span#isbn
        div.orderBlock.col-md-4
            div.actionBook
              h3 Форма приема / выдачи
              br
              p Тут вносить данные при выдаче и приеме книги
            div.response
              h3 Успех
              br
              p Иструкции высланы на email

            .input-group.form-queue
              .input-group-addon
                i.fa.fa-user.fa-1x(aria-hidden="true")
              input#name.form-control(type='text', placeholder='имя' name='name')
            .input-group.form-queue
              .input-group-addon
                i.fa.fa-mobile.fa-1x(aria-hidden="true")
              input#phone.form-control(type='text', placeholder='телефон' name='phone')
            .input-group.form-queue
              .input-group-addon
                i.fa.fa-at.fa-1x(aria-hidden="true")
              input#email.form-control(type='text', placeholder='email' name='email')
              //- span.glyphicon.glyphicon-ok.form-control-feedback(aria-hidden='true')
              //- span.glyphicon.glyphicon-remove.form-control-feedback(aria-hidden='true')
            .input-group.form-queue.termD-group
              .input-group-addon
                i.fa.fa-clock-o.fa-1x(aria-hidden="true")
              input#term.form-control(type='text', placeholder='срок' name='term')
            .input-group.form-queue.depositD-group
              .input-group-addon
                i.fa.fa-money.fa-1x(aria-hidden="true")
              input#pawn.form-control(type='text', placeholder='залог $' name='pawn')
            .input-group.form-queue.dateD-group
              .input-group-addon
                i.fa.fa-calendar-check-o.fa-1x(aria-hidden="true")
              input#date.form-control(type='text', placeholder='Дата возврата книги' name='date' disabled)
            .input-group.form-queue
            div.updateBookAction
              span продлить
              input#renewalOfBook(type='checkbox', value='option1')


            br
            button.btnBookAction.btn.btn-success(type='button')

