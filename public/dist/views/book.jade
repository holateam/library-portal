extends layout

block content
        div.row.bookID
            div.col-md-3.bookImg
                img(src='img/books/'+data.id+'.jpg')
            div.col-md-7.bookInfo
                h4.titleBook #{data.title}
                div
                  span author:
                  | #{data.authors}
                div 
                  span year:
                  | #{data.year}
                div 
                  span pages:
                  | #{data.pages}
                div 
                  span ISBN:
                  | #{data.isbn}
                div
                    button.btnBookID.btn.btn-success(type='button') Want to read!
        div.row.bookDescription
            div.col-md-12
                h4 О книге
                hr
                p #{data.description}
